// This file defines all token kinds.
// Took the idea from Clang :)
#ifndef TOKEN
#define TOKEN(X)
#endif
#ifndef PUNCTUATOR
#define PUNCTUATOR(X,Y) TOKEN(X)
#endif
#ifndef PPKEYWORD
#define PPKEYWORD(X) TOKEN(pp_ ## X)
#endif
#ifndef KEYWORD
#define KEYWORD(X,Y) TOKEN(kw_ ## X)
#endif
#ifndef UOPERATOR
#define UOPERATOR(X,Y) TOKEN(kw_uop_ ## X)
#endif

TOKEN(unknown)
TOKEN(eof)
TOKEN(comment)
TOKEN(identifier)
TOKEN(real)
TOKEN(integer)
TOKEN(string)

TOKEN(tab)
TOKEN(new_line)

// Punctuators
PUNCTUATOR(l_square,   "[")
PUNCTUATOR(r_square,   "]")
PUNCTUATOR(l_paren,    "(")
PUNCTUATOR(r_paren,    ")")
PUNCTUATOR(period,     ".")
PUNCTUATOR(star,       "*")
PUNCTUATOR(plus,       "+")
PUNCTUATOR(minus,      "-")
PUNCTUATOR(slash,      "/")
PUNCTUATOR(caret,      "^")
PUNCTUATOR(colon,      ":")
PUNCTUATOR(comma,      ",")
PUNCTUATOR(at,         "@")
PUNCTUATOR(percentage, "\%")

// Preprocessor keywords
PPKEYWORD(include)

// Keywords
KEYWORD(declare,    "DECLARE")
KEYWORD(bit,        "BIT")
KEYWORD(real,       "REAL")
KEYWORD(octet,      "OCTET")
KEYWORD(integer,    "INTEGER")

KEYWORD(defgate,    "DEFGATE")
KEYWORD(defcircuit, "DEFCIRCUIT")
KEYWORD(measure,    "MEASURE")

KEYWORD(controlled, "CONTROLLED")
KEYWORD(dagger,     "DAGGER")

KEYWORD(label,      "LABEL")
KEYWORD(halt,       "HALT")
KEYWORD(jump,       "JUMP")
KEYWORD(jumpwhen,   "JUMP-WHEN")
KEYWORD(jumpunless, "JUMP-UNLESS")

KEYWORD(reset,  "RESET")
KEYWORD(wait,   "WAIT")
KEYWORD(nop,    "NOP")
KEYWORD(pragma, "PRAGMA")

KEYWORD(false,    "FALSE")
KEYWORD(true,     "TRUE")
KEYWORD(not,      "NOT")
KEYWORD(and,      "AND")
KEYWORD(or,       "OR")
KEYWORD(move,     "MOVE")
KEYWORD(exchange, "EXCHANGE")

KEYWORD(pi, "pi")
KEYWORD(i,  "i")

// Keywords unary operators
UOPERATOR(sin,  "sin")
UOPERATOR(cos,  "cos")
UOPERATOR(sqrt, "sqrt")
UOPERATOR(exp,  "exp")
UOPERATOR(cis,  "cis")

#undef UOPERATOR
#undef KEYWORD
#undef PPKEYWORD
#undef PUNCTUATOR
#undef TOKEN

